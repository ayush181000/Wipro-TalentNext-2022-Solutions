
public class MergeString {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String a = "Hello";
		int n = a.length();

		String b = "World";
		int m = b.length();

		StringBuilder ans = new StringBuilder();

		int i = 0;
		int j = 0;

		while (i < n && j < m) {
			ans = ans.append(a.charAt(i++));
			ans = ans.append(b.charAt(j++));
		}

		while (i < n) {
			ans = ans.append(a.charAt(i++));
		}

		while (j < m) {
			ans = ans.append(b.charAt(j++));
		}

	}

}
