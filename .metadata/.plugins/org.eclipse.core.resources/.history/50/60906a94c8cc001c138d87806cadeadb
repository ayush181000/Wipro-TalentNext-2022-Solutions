// 9

import java.util.Arrays;

public class SumArrConditional {

	public static void main(String[] args) {

		int[] arr = { 7, 1, 2, 3, 6 };

		int sum = 0;
		boolean count = true;
		boolean found6 = false;
		for (int i = 0; i < arr.length; i++) {

			if (arr[i] == 6) {
				count = false;
				found6 = true;
			}

			if (arr[i] == 7) {
				count = true;
				found6 = false;
			}
			if (count) {
				sum = sum + arr[i];
			}
		}

		System.out.println(sum);
	}

}
